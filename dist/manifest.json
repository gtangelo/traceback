{
  "name": "Traceback",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A chrome extension that allows users to track time spent on tasks",
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon" : {
      "16": "/stopwatch.png",
      "48": "/stopwatch.png",
      "128": "/stopwatch.png"
    },
    "default_title": "Traceback"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
